  "repository": {},
  "license": "MIT",
  "engines": {
    "node": "8.9.4"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "body-parser": "^1.16.0",
    "bpk-component-label": "^3.2.52",
    "bpk-react-utils": "^2.5.0",
    "concurrently": "^3.1.0",
    "connect-redis": "^3.3.3",
    "express": "^4.14.1",
    "html-minifier": "^3.5.9",
    "react-docgen": "^2.20.0",
    "react-router-dom": "^4.2.2",
    "redis": "^2.8.0",
    "rimraf": "^2.5.4",
    "scroll-into-view-if-needed": "^1.4.0"
  },
  "scripts": {
    "build:server": "babel server.js --ignore node_modules,build --out-dir build && cp -R ./server_content/pages ./build/server_content/",
    "start:server": "nodemon -r babel-register server.js",
    "start:prod:server": "node build/server.js",
    "build": "concurrently \"cd client && yarn build\" \"cd server && yarn build\"",
    "clean": "concurrently \"rimraf node_modules\" \"cd client && rimraf node_modules build\" \"cd server && rimraf node_modules build\"",
    "heroku-postbuild": "yarn build",
    "start": "concurrently \"cd client && PORT=3000 yarn start\" \"cd server && PORT=3001 yarn start\"",
    "start:prod": "cd server && yarn start:prod",
    "test": "eslint . --ext .js,.jsx",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\""
  },
  "devDependencies": {
    "babel-register": "^6.22.0",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-skyscanner": "^3.0.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.6.1",
    "nodemon": "^1.17.2",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "stylelint": "^8.4.0",
    "stylelint-config-skyscanner": "^1.0.1",
    "yarn": "^1.3.2"
  }
}
